<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	/* Для вебкит-браузеров (Chrome, Safari, Edge) */
	::-webkit-scrollbar {
		width: 25px; /* Ширина скроллбара */
		opacity: 0.5
	}

	/* Фон скроллбара */
	::-webkit-scrollbar-track {
		background: radial-gradient(circle farthest-corner at var(--x) var(--y), var(--color1), var(--color2)); /* Прозрачный фон */
	}

	/* Ползунок скроллбара */
	::-webkit-scrollbar-thumb {
		background: radial-gradient(circle farthest-corner at var(--x) var(--y), var(--color1), var(--color2)); /* Прозрачный фон */; /* Цвет ползунка */
		border-radius: 5px; /* Закругление углов */
	}

	/* При наведении на ползунок */
	::-webkit-scrollbar-thumb:hover {
		background: radial-gradient(circle closest-corner, #F5844C, var(--color2)); /* Прозрачный фон */; /* Цвет ползунка */
	}
	html,
	body {
		--color1: rgba(255, 165, 0, 0.8);
		--color2: rgba(100, 0, 50, 0.9);
		margin: 0;
		width: 100%;
		min-height: 100vh;
		font-family: 'Bebas';
		color: white;
		background-image: radial-gradient(circle farthest-corner at var(--x) var(--y), var(--color1), var(--color2));
		

	}
	ul{
		margin: 0
	}
	a{
		color: inherit;
		text-decoration: inherit;
	}
	a:hover{
		cursor: pointer;
	}
	@font-face {
    font-family: 'Bebas';
    src: url('fonts/BebasNeueCyrillic.eot');
    src:
        url('fonts/BebasNeueCyrillic.eot') format('embedded-opentype'),
        url('fonts/BebasNeueCyrillic.woff2') format('woff2'),
        url('fonts/BebasNeueCyrillic.woff') format('woff'),
        url('fonts/BebasNeueCyrillic.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
	}
	@font-face {
    font-family: 'Anjhay';
    src: url('/fonts/Anjhay.ttf') format('truetype'),
         url('/fonts/Anjhay.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
}

</style>

<script>
	document.documentElement.style.setProperty('--x', `${10}px`);
	document.documentElement.style.setProperty('--y', `${10}px`);
	document.addEventListener('mousemove', function(e) {
      const x = e.clientX;
      const y = e.clientY;

      // Обновляем значения переменных --x и --y
      document.documentElement.style.setProperty('--x', `${x}px`);
      document.documentElement.style.setProperty('--y', `${y}px`);
    });
</script>
